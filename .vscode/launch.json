{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Pico Debug",
			"type": "cortex-debug",
			"request": "launch",
			"servertype": "openocd",
			"gdbPath": "gdb-multiarch",
			"device": "RP2040",
			"runToEntryPoint": "main",
			"executable": "${command:cmake.launchTargetPath}",
			"svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
			"cwd": "${workspaceRoot}",
			"openOCDLaunchCommands": ["transport select swd", "adapter speed 4000"],
			// Work around for stopping at main on restart
			"postRestartCommands": [
				"break main",
				"continue"
			],
			"configFiles": [
				"interface/cmsis-dap.cfg",
				"target/rp2040-core0.cfg"
			]
		},
		
        {
            "name": "Pico Debug: Remote",
            "type": "cortex-debug",
			"executable": "${command:cmake.launchTargetPath}",
			"gdbPath": "gdb-multiarch",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "${input:device.host}",
			"runToEntryPoint": "main",
			"svdFile": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
        },
	],
    "inputs": [
        {
            "id": "device.host",
            "type": "promptString",
            "default": "host.docker.internal:3333",
            "description": "The local hostname with port for GDB to connect to"
        }
    ]
}